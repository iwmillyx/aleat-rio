#include<stdio.h>

int fatorial(int a){
    
    if(a == 0 || a == 1){
        return 1;
    } else {
        return a * fatorial(a - 1);
    }
}

int main(){
    
    int x, b;
    
    printf("Digite um número para calcular o fatorial: ");
    scanf("%i", &b);
    
    int resultado = fatorial(b);
    
    printf("O valor de %i no fatorial é: %i", b, resultado);
    
    return 0;
}
