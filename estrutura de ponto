#include <stdio.h>

struct Ponto {
    
    int x;
    int y;
    
};

int main(){
    
    struct Ponto plano, cartesiano;
    
    printf("Digite as coordenadas x e y para o 1째 ponto: ");
    scanf("%d %d", &plano.x, &cartesiano.y);
    
    printf("Digite as coordenadas x e y para o 2째 ponto: ");
    scanf("%d %d", &cartesiano.x, &plano.y);
    
    printf("\nCoordenadas do 1째 ponto: x = %d, y = %d\n", plano.x, cartesiano.y);
    printf("Coordenadas do 2째 ponto: x = %d, y = %d\n", cartesiano.x, plano.y);
    
    return 0;
}
