#include<stdio.h>

int soma_naturais(int n){
    
    if( n == 1){
        return 1;
    } else {
        return n + soma_naturais(n-1);
    }
} 

int main(){
    
    int numero = 5;
    int resultado = soma_naturais(numero);
    
    printf("A soma dos primeiros números naturais é: %i", resultado);
    
    return 0;
}
