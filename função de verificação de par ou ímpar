#include<stdio.h>

int verificaPar(int a){
    
    if( a % 2 == 0){
        return 1;
    } else {
        return 0;
    }
}

int main(){
    
    int numero;
    
    printf("Digite um número: ");
    scanf("%i", &numero);
    
    int par_impar = verificaPar(numero);
    
    printf("O resultado é: %i", par_impar);
    
    return 0;
}
